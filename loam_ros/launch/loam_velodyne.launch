<?xml version="1.0"?>
<launch>

  <arg name="rviz" default="true" />
  <rosparam command="load" file="$(find loam_ros)/config/loam_velodyne.yaml"/>

  <node pkg="loam_ros" type="multiScanRegistration" name="multiScanRegistration" output="screen">
    
    <remap from="/multi_scan_points" to="/velodyne_points" />
    <!-- <remap from="/imu/data" to="/raw_imu" /> -->
    <!-- <remap from="/imu/data" to="/djiros/imu" />   -->
  </node>

  <node pkg="loam_ros" type="laserOdometry" name="laserOdometry" output="screen" respawn="true" />

  <node pkg="loam_ros" type="laserMapping" name="laserMapping" output="screen" />

  <node pkg="loam_ros" type="transformMaintenance" name="transformMaintenance" output="screen" />

  <group if="$(arg rviz)">
    <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find loam_ros)/rviz_cfg/loam_velodyne.rviz" />
  </group>

</launch>
